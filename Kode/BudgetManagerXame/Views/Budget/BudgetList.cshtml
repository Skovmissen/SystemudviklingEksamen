@model BudgetManagerXame.Models.Budget
@{
    ViewBag.Title = "Budgets";
}
<div class="row">
    <h2>Velkommen, <b>@ViewBag.Name !</b></h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">År</th>
                <th scope="col">Beskrivelse</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.BudgetList)
            {
                <tr>
                    <td>@Html.ActionLink(item["Year"].ToString(), "Details", new { id = item["Id"] })</td>
                    <td>@item["Description"]</td>
                    <td></td>
                    <td class="text-right">@Html.ActionLink("Inddatere", "Create", "Estimate", new { budgetId = item["Id"], periodId = 1 }, null) | @Html.ActionLink("Oversigt", "Show", "Estimate", new { budgetId = item["Id"] }, null) | @Html.ActionLink("Redigere", "Edit", new { id = item["Id"] }) | @Html.ActionLink("Slet", "Delete", new { id = item["Id"] })  </td>
                </tr>
            }
        </tbody>
    </table>

    @Html.ActionLink("Opret Nyt Budget", "Create", "Budget", new { fiscalId = Model.Fiscalid, id = Model.firmId }, new { @class = "Login-btn" })
</div>







